    +dev_head('Transtour оплата', true)

    body
        .wrapper
            .base
                div.main_content
                    .hero_block._image(style='background-image:url(i/payments_hero.jpg)')
                        .section_inner
                            .hero_caption Оплата заказа
                            
                    .meetings_section._info
                        .section_inner
                            h2.section_title Заголовок про оплату
                            .meeting_tip Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. 

